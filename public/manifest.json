{
  "manifest_version": 3,
  "name": "LinkedIn Auto Connector",
  "version": "1.0",
  "description": "Automates LinkedIn connection requests for search results.",
  "background":{
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  }
}